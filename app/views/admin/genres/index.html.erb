<div class="container">
  <h2>ジャンル一覧・追加</h2>
  <div class="row">
    <div class="col-lg-10">
      <table class="table table-striped">
        <tr>
          <%= form_with model: @genre, url:admin_genres_path ,method: :post do |f| %>
          <td><%= f.label :ジャンル名 %></td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '新規登録' %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <table class="table table-striped">
        <thead>
          <tr>ジャンル</tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= button_to "編集する",edit_admin_genre_path(genre.id), method: :get %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>