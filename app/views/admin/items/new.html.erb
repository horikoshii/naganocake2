<div class="container">
  <h2>アイテム追加</h2>
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-striped">
        <%= form_with model: @item, url:admin_items_path ,method: :post do |f| %>
        <tr>
          <td><%= f.label :商品画像 %></td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td><%= f.label :商品名 %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label :商品説明 %></td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td><%= f.label :ジャンル %></td>
          <td><%=  %></td>
        </tr>
        <tr>
          <td><%= f.label :税抜価格 %></td>
          <td><%=  %></td>
        </tr>
        <tr>
          <td><%= f.label :販売ステータス %></td>
          <td><%=  %></td>
        </tr>
        <td><%= f.submit '更新' %></td>
        <% end %>
      </table>
    </div>
  </div>
</div>