<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <td><h2>商品一覧</h2></td>
            <td></td>
            <td></td>
            <td></td>
            <td><%= link_to "new",new_admin_item_path %></td>
          </tr>
          <tr>
            <td>商品ID</td>
            <td>商品名</td>
            <td>税抜価格</td>
            <td>ジャンル</td>
            <td>販売ステータス</td>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.name %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active %>
                <p>販売中</p>
                <% else %>
                <p>販売中止</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>