<div class="container">
  <h2>アイテム編集</h2>
  <div class="row">
    <div class="col-lg-8">
      <table class="table table-striped">
        <%= form_with model: @item, url:admin_item_path ,method: :patch do |f| %>
        <tr>
          <td>商品画像</td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name ) %></td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "販売中止" %>
          </td>
        </tr>
        <td><%= f.submit '更新' %></td>
        <% end %>
      </table>
    </div>
  </div>
</div>