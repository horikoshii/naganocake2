<div class="container">
  <h2><%= @genre.name %>一覧</h2>
  <div class="row">
  <div class="col-lg-2">
   <table class="table table-striped">
     <thead>
      <tr>ジャンル検索</tr>
     </thead>

     <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name, serch_path(genre_id: genre.id) %></td>
      </tr>
      <% end %>
     </tbody>
   </table>
  </div>

  <div class="col-lg-10">
   <div class="row">
    <% @items.each do |item| %>
    <div class="col-lg-3">
     <p>
      <%= link_to item_path(item.id) do %>
      <%= image_tag item.image, size: "200x200" %>
      <% end %>
     </p>
     <p><%= link_to item.name, item_path(item.id) %></p>
     <p><%= item.price %></p>
    </div>
    <% end %>
 </div>
</div>