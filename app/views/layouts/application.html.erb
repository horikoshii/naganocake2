<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-dark text-white">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <div class="navbar-brand p-3">
            <%= link_to "Naganocake", root_path, class: 'nav-link text-white' %></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">

                <% if admin_signed_in? %>

                <li class="nav-item">
                 <%= link_to(admin_items_path,  class: 'nav-link text-white') do %>
                 <strong> 商品一覧 </strong>
                 <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to(admin_customers_path,  class: 'nav-link text-white') do %>
                  <strong> 会員一覧 </strong>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to(admin_path,  class: 'nav-link text-white') do %>
                  <strong> 注文履歴一覧 </strong>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to(admin_genres_path,  class: 'nav-link text-white') do %>
                  <strong> ジャンル一覧 </strong>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to(destroy_admin_session_path, method: :delete, class: 'nav-link text-white') do %>
                  <strong> ログアウト </strong>
                  <% end %>
                </li>

                <% elsif customer_signed_in? %>

                <li class="nav-item">
                  <%= link_to(my_page_path, class: 'nav-link text-white') do %>
                  <strong> マイページ </strong>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to(items_path, class: 'nav-link text-white') do %>
                  <strong> 商品一覧 </strong>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to(cart_items_path, class: 'nav-link text-white') do %>
                  <strong> カート </strong>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to(destroy_customer_session_path, method: :delete, class: 'nav-link text-white') do %>
                  <strong> ログアウト </strong>
                  <% end %>
                </li>

                <% else %>

                <li class="nav-item">
                  <%= link_to(about_path, class: 'nav-link text-white') do %>
                  <strong> About </strong>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to(items_path, class: 'nav-link text-white') do %>
                  <strong> 商品一覧 </strong>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to(new_customer_registration_path, class: 'nav-link text-white') do %>
                  <strong> 新規登録 </strong>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to(customer_session_path, class: 'nav-link text-white') do %>
                  <strong> ログイン </strong>
                  <% end %>
                </li>

                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
